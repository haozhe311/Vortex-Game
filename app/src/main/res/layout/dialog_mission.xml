<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_terminal"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- HEADER -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/// MISSION PROTOCOL"
        android:textColor="@color/cyber_cyan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:letterSpacing="0.05"
        android:layout_marginBottom="16dp"/>

    <!-- DIVIDER LINE -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cyber_cyan"
        android:alpha="0.5"
        android:layout_marginBottom="16dp"/>

    <!-- BODY TEXT -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. TARGET: Tap the CYAN nodes.\n\n2. TIME: 5 seconds per level.\n\n3. GOAL: Clear 4 levels to win."
        android:textColor="#E0E0E0"
        android:textSize="16sp"
        android:typeface="monospace"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Good luck, Agent."
        android:textColor="@color/cyber_cyan"
        android:textSize="14sp"
        android:textStyle="italic"
        android:typeface="monospace"
        android:layout_marginBottom="24dp"/>

    <!-- BUTTON -->
    <Button
        android:id="@+id/btnUnderstood"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ACKNOWLEDGE"
        android:textColor="#1F2229"
        android:textStyle="bold"
        android:typeface="monospace"
        android:backgroundTint="@color/cyber_cyan"/>

</LinearLayout>