<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/cyber_bg">

    <!-- Themed Title -->
    <!-- ADDED: layout_marginTop="32dp" to prevent status bar overlap -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOP 25 SCORES"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="@color/cyber_cyan"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="32dp"

        android:shadowColor="@color/cyber_pink"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="0.1"/>

    <!-- Subtitle for Level (e.g. "LEVEL 2") -->
    <TextView
        android:id="@+id/tvLevelSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALL LEVELS"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="@color/cyber_text"
        android:layout_marginBottom="24dp"/>

    <!-- Themed List -->
    <ListView
        android:id="@+id/listViewScores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/cyber_cyan"
        android:dividerHeight="1dp"/>

</LinearLayout>